<Window x:Class="lian.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lian"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <ToggleButton Width="50" Height=" 50" x:Name="toggle"></ToggleButton>
            <Button Width="100" Height="50" x:Name="btn" Click="btn_Click">确定</Button>
            <TextBox Width="100"
                Height="50"
                     x:Name="box"></TextBox>
        </StackPanel>
        
    </Grid>
</Window>
